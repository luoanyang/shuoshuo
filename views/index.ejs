<% include header.ejs %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <% if(!login) {%>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>班级说说</h1>
                <p>欢迎来到班级说说，你可以注册加入我们，一起交流！</p>
                <p><a class="btn btn-primary btn-lg" href="/register" role="button">注册</a></p>
            </div>
            <div class="col-md-6">
                <h3>已有账号登陆</h3>
                <form>
                    <div class="form-group">
                        <label for="username">账号：</label>
                        <input type="email" class="form-control" id="username" placeholder="请输入账号">
                    </div>
                    <div class="form-group">
                        <label for="password">密码</label>
                        <input type="password" class="form-control" id="password" placeholder="请输入密码">
                    </div>
                    <button type="button" class="btn btn-success" id="js-login-btn">登陆</button>
                </form>
                <div class="alert alert-danger dis-none" role="alert" id="js-false-box"></div>
            </div>
        </div>
    </div>
    <%} else {%>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="avatar-border">
                    <img class="img-thumbnail" width="100%" src="avatar/<%= avatar%>"/>
                    <p class="text-center"><b><%= username %></b></p>
                </div>
            </div>
            <div class="col-md-10">
                <p>发表说说：</p>
                <textarea class="form-control" rows="3" id="saysayContent"></textarea>
                <p class="text-right" style="margin-top: 10px"><button type="button" class="btn btn-success" id="js-post-saysayContent">发表</button></p>
            </div>
        </div>
    </div>
    <% } %>
</div>
<% if(!login){%>
<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">登陆后才能看到说说内容哦！</h2>
        </div>
    </div>
</div>
<%}else{%>
<div class="container" id="content">
    <!-- Example row of columns -->
    <div class="row">

        <div class="col-md-4" v-for="(item,index) in data">
            <h2 ><img :src="'avatar/'+item.username+'.jpg'" width="30px"> {{item.username}} 发表了：</h2>
            <p>{{item.content}}</p>
            <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
        </div>

    </div>
</div> <!-- /container -->
<%}%>
<% include footer.ejs %>
<script src="js/vue.js"></script>
<script src="js/axios.min.js"></script>
<script>
    var nw = new Vue({
        el:"#content",
        data:{
            data:[]
        },
        mounted:function(){
            this.getSaysay();
        },
        methods:{
            getSaysay:function(){
                var _this = this;
                axios.get('/getSaysay')
                    .then(function(response){
                        console.log(response)
                        _this.data=response.data.data;
                    })
                    .catch(function(err){
                        console.log(err);
                    });
            }
        }

    })

</script>
<script>
$(document).ready(function () {
        $("input").focus(function () {
            $("#js-false-box").fadeOut();
        })
        $("#js-login-btn").click(function () {
            $.post("/doLogin", {
                "username": $("#username").val(),
                "password": $("#password").val()
            }, function (result) {
                if (result == "1") {
                    //注册成功
                    alert("登陆成功！将自动跳转到首页");
                    window.location = "/";
                } else if (result == "-1") {
                    //用户名被占用
                    $("#js-false-box").fadeIn().html("用户名不存在！");
                }
                else if (result == "-2") {
                    //用户名被占用
                    $("#js-false-box").fadeIn().html("密码错误！");
                }
            });
        });
        $("#js-post-saysayContent").click(function(){
            $.post("/postSaysay",{
                "content":$("#saysayContent").val()
                },function(result){
                if(result == "1"){
                    alert("说说发表成功!");
                    window.location = "/";
                }else{
                    alert("说说发表失败!");
                }
            });
        });
    });
</script>
</body>
</html>
